# =============================================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO PARA EL FRONTEND
# =============================================================================

# URL del backend Django API - USANDO BACKEND DESPLEGADO EN RENDER
VITE_API_URL=https://api.com/

# Configuración de desarrollo
VITE_APP_MODE=development
VITE_APP_NAME=TruckPart
VITE_APP_VERSION=1.0.0


# Configuración de API
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Configuración de logging
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_ERROR_LOGGING=true

# Configuración de paginación por defecto
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# URLs de documentación
VITE_API_DOCS_URL=https://ar-e-web.onrender.com/api/docs/
VITE_API_SCHEMA_URL=https://ar-e-web.onrender.com/api/schema/

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_NOTIFICATIONS=true

